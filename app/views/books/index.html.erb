<h1>Books</h1>

<div id="authors" class="text-center mx-auto">
  <table class="table table-hover">
    <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">ISBN</th>
      <th scope="col">Author</th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <% if current_user == book.author.user %>
        <tr>
          <td><%= link_to "#{book.title}", book %></td>
          <td><%= book.isbn %></td>
          <td><%= link_to "#{book.author.first_name} #{book.author.last_name}", book.author %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>