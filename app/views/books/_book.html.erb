<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold"><%= book.title %></h1>
    <p class="card-text">
      <strong>ISBN:</strong>
      <%= book.isbn %>
    </p>
    <p class="card-text">
      <strong>Author:</strong>
      <%= "#{book.author.first_name} #{book.author.last_name}" %>
    </p>

    <div class="d-flex">
      <%= link_to "Edit", edit_book_path(@book), class:"btn btn-dark me-3" %>
      <%= link_to "Back to books", books_path, class:"btn btn-primary me-3" %>
      <%= button_to "Delete", @book, method: :delete, class:"btn btn-danger me-3" %>
    </div>
  </div>
</div>
